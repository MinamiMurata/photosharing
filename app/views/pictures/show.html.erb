<p id="notice"><%= notice %></p>

<h5>写真:</h5>
<p><%= image_tag(@picture.image.url, width: '350') if @picture.image && @picture.image.url %></p>

<h5 class="mt-3">テキスト:</h5>
<p><%= @picture.content %></p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-secondary' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-warning' %>
  <% end %>
<% end %>

<% if @picture.user_id == current_user.id %>
  <%= link_to '編集', edit_picture_path(@picture), class: "btn btn-outline-danger" %>
  <%= link_to '戻る', pictures_path, class: "btn btn-outline-danger" %>
<% else %>
  <%= link_to '戻る', pictures_path, class: "btn btn-outline-danger" %>
<% end %>