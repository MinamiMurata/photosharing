<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<h2><%= @user.name %>のページ</h2>

<h5 class="mt-4">Email</h5>
<p><%= @user.email %></p>
<h5 class="mt-4">Profile picture</h5>
<p><%= image_tag(@user.profile_picture.url, width: '300') if @user.profile_picture && @user.profile_picture.url %></p>
<h5 class="mt-4">Profile</h5>
<p><%= @user.profile %></p>

<% if @user.id == current_user.id %>
  <%= link_to 'Edit', edit_user_path(@user), class: "mt-3 btn btn-outline-danger btn-lg" %>
  <%= link_to 'Back', users_path, class: "mt-3 ms-3 btn btn-outline-danger btn-lg" %>
<% else %>
  <%= link_to 'Back', users_path, class: "mt-3 btn btn-outline-danger btn-lg" %>
<% end %>