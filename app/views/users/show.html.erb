<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>

<h2><%= @user.name %>のページ</h2>

<h5 class="mt-4">メールアドレス</h5>
<p><%= @user.email %></p>
<h5 class="mt-4">プロフィール画像</h5>
<p><%= image_tag(@user.profile_picture.url, width: '300') if @user.profile_picture && @user.profile_picture.url %></p>
<h5 class="mt-4">プロフィール</h5>
<p><%= @user.profile %></p>

<% if @user.id == current_user.id %>
  <%= link_to 'お気に入り一覧', favorites_path(@user), class: "mt-3 btn btn-outline-warning btn-lg" %>
  <%= link_to 'プロフィールを編集する', edit_user_path(@user), class: "mt-3 btn btn-outline-danger btn-lg" %>
  <%= link_to '戻る', pictures_path, class: "mt-3 ms-3 btn btn-outline-danger btn-lg" %>
<% else %>
  <%= link_to '戻る', pictures_path, class: "mt-3 btn btn-outline-danger btn-lg" %>
<% end %>